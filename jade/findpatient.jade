extends layout

block content
  h1(class="page-header") Find Patient Record
  form
    div(class="form-group")
      label(for="query") Find patient(s)
      input(type="text", class="form-control", id="query", placeholder="Search by ID or name")

  table(class="table table-hover")
    thead
      tr
        th Identifier
        th Name
        th Gender
        th Birthdate
    tbody
      each patient in [{"identifier": "A110","name": "Joe Blitzstein","gender": "M","birthdate": "1969-04-11"},{"identifier": "A111","name": "John Doe","gender": "M","birthdate": "1950-11-05"},{"identifier": "A112","name": "Judy Garland","gender": "F","birthdate": "1969-06-22"}]
        tr
          td <a href="patient.html">#{patient.identifier}</a>
          td #{patient.name}
          td #{patient.gender}
          td #{patient.birthdate}